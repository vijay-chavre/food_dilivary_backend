  "compilerOptions": {
    "target": "ES6",
    "module": "Node16",
    "outDir": "./dist",
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "Node16",
    "allowImportingTsExtensions": true,
    "noEmit": true
